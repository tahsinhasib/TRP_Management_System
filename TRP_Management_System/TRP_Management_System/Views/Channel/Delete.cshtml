
@{
    ViewBag.Title = "Delete";
}



<h2>Delete Channel</h2>

<p>Are you sure you want to delete this channel?</p>

<div>
    <h4>@Model.ChannelName</h4>
    <p>Established Year: @Model.EstablishedYear</p>
    <p>Country: @Model.Country</p>
</div>

<form method="post" action="@Url.Action("DeleteConfirmed", "Channel", new { ChannelId = Model.ChannelId })">
    <input type="hidden" name="ChannelId" value="@Model.ChannelId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("List", "Channel")" class="btn btn-secondary">Cancel</a>
</form>

